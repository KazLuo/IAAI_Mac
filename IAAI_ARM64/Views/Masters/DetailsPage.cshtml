@model IAAI_ARM64.Models.Master

@{
    ViewBag.Title = "DetailsPage";
    Layout = "~/Views/Shared/FontKnowledge.cshtml";
}
<div id="banner-area" class="banner-area" style="background-image: url(/HTML/Images/banner-bg.jpg)">
    <!-- Subpage title start -->
    <div class="banner-text text-right">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="breadcrumb">
                        <li>首頁</li>
                        <li>關於我們</li>
                        <li><a href="#">專家介紹</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Subpage title end -->
</div>

<!-- Banner area end -->
<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>關於我們</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            <li><a href="about.html">協會介紹</a></li>
                            <li class="active"><a href="master.html">專家介紹</a></li>
                        </ul>
                    </div>
                    <!-- Categories end -->
                </div>
                <!-- Sidebar end -->
            </div>
            <!-- Sidebar Col end -->
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <h2 class="page-title">專家介紹</h2>
                <hr class="botmargin-min">
                <!-- 內容開始 -->
                <div class="row">
                    <div class="ts-service-wrapper">
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <div class="ts-service-image-wrapper">
                                <span class="ts-service-image">
                                    <img class="img-responsive" src="@Url.Content("~/Upload/" + Model.Photo)" alt="@Html.DisplayFor(modelItem => Model.Name)">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-8 col-sm-12 col-xs-12">
                            <div class="ts-service-info">
                                <p><h3>@Html.DisplayFor(model => model.Name)</h3></p>
                                <p><span>現職：</span>@Html.DisplayFor(model => model.Position) </p>
                                <p><span>學歷：</span>中央警察大學警政研究所消防組碩士 、中央警察大學消防學系學士 </p>
                                <p>
                                    <span>基本介紹：</span>
                                    
                                </p>
                                <p>
                                    <span>經歷：</span>
                                    @Html.Raw(Model.Experience)
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="ts-service-info">
                                @Html.Raw(Model.Detail)
                            </div>
                        </div>
                    </div>
                    <!-- Col 1 end -->
                </div>
                <!-- Content row 1 end -->
                <!-- 內容結束 -->
                <div class="tags-area clearfix">
                    <div class="post-footer  pull-left">
                        <a href="master.html" class="btn btn-primary">返回列表</a>
                    </div>
                    <div class="share-items pull-right">
                        <ul class="post-social-icons unstyled">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Content Col end -->
        </div>
        <!-- Main row end -->
    </div>
    <!-- Conatiner end -->
</section>
