@model IEnumerable<IAAI_ARM64.Models.Master>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DashboardTemplate.cshtml";
}

<h2>專家管理</h2>

<p>
    @Html.ActionLink("新增專家", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <img id="imagePreview" style="max-width: 120px; max-height: 120px;" src="@Url.Content("~/Upload/" + item.Photo)" />
                @*@Html.DisplayFor(modelItem => item.Photo)*@
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>*@
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@if (TempData["UploadSuccess"] != null)
{
    <div class="alert alert-success">@TempData["UploadSuccess"].ToString()</div>
}

@if (TempData["UploadError"] != null)
{
    <div class="alert alert-danger">@TempData["UploadError"].ToString()</div>
}

