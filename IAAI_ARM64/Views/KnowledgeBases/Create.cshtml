@model IAAI_ARM64.Models.KnowledgeBase

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/DashboardTemplate.cshtml";
}

<h2>新增知識庫內容</h2>



@using (Html.BeginForm("Create", "KnowledgeBases", FormMethod.Post, new { enctype = "multipart/form-data" }))
    //在這邊要加上enctype="multipart/form-data"才能上傳檔案
    //並且指定Controller為KnowledgeBases
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.InitDate)
        @Html.TextBoxFor(model => model.InitDate, new { type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InitDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Download)
        <br />
        <input type="file" name="file" id="file" />
        @Html.ValidationMessageFor(model => model.Download)
    </div>

    <div class="form-group">
        <input type="submit" value="送出" class="btn btn-secondary p-2" />
    </div>
}

<div>
    @Html.ActionLink("回到管理列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
