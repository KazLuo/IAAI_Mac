@model IEnumerable<IAAI_ARM64.Models.KnowledgeBase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DashboardTemplate.cshtml";
}

<h2>知識庫管理</h2>

<p>
    @Html.ActionLink("新增資訊", "Create")
</p>
@if (TempData["UploadSuccess"] != null)
{
    <div class="alert alert-success">@TempData["UploadSuccess"].ToString()</div>
}

@if (TempData["UploadError"] != null)
{
    <div class="alert alert-danger">@TempData["UploadError"].ToString()</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Download)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.InitDate.ToString("yyyy-MM-dd"))
                @*@Html.DisplayFor(modelItem => item.InitDate)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Download)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }


</table>
